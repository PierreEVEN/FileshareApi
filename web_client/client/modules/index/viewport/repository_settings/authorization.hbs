<div class="repos-setting-authorization">
    <div class="column">
        <p class="field">{{name}}</p>
    </div>
    <div class="column">
        <p class="field">{{#if root_item}}root_item{{/if}}</p>
    </div>
    <div class="column">
        <label>
            <select class="field" {{object "access_type"}} name="{{access_type}}" onchange="{{ctx 'set_access_type(event)'}}">
                <option value="read-only" {{#if is_read_only}}selected{{/if}}>Lecture seule</option>
                <option value="contributor" {{#if is_contributor}}selected{{/if}}>Contributeur</option>
                <option value="moderator" {{#if is_moderator}}selected{{/if}}>Mod√©rateur</option>
            </select>
        </label>
    </div>
    <div class="column">
        <button class="cancel-button field" onclick="{{ctx 'remove(event)'}}">X</button>
    </div>
</div>