        <label for='username'>
            <input type="text" name="username" placeholder="Nom d'utilisateur" id="username" required>
        </label>
    </div>
    <div class="field">
        <label for='access_type'>
            <select class="field" id='access_type' name="{{access_type}}">
                <option value="read-only" selected>Lecture seule</option>
                <option value="contributor">Contributeur</option>
                <option value="moderator">Mod√©rateur</option>
            </select>
        </label>
    </div>

    <input type="submit" value="Autoriser">
</form>